@namespace Snake.Components
@inherits ComponentBase

<div class="food-block" style="width:@_blockSizePx;height:@_blockSizePx; left:@_leftPx;top:@_topPx"></div>

@code {
    [Parameter] public int FieldsInLine { get; set; }
    [Parameter] public int BoxSize { get; set; }
    [Parameter] public int X { get; set; }
    [Parameter] public int Y { get; set; }
    [Parameter] public int Number { get; set; }


    private double _blockSize
    {
        get => ((double)BoxSize) / ((double)FieldsInLine);
    }


    private string _blockSizePx
    {
        get => $"{_blockSize}px";
    }

    private double _left
    {
        get => _blockSize * X;
    }

    private string _leftPx
    {
        get => $"{_left}px";
    }

    private double _top
    {
        get => _blockSize * Y;
    }
    private string _topPx
    {
        get => $"{_top}px";
    }
}
